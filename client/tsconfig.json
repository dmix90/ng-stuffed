{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "@views/*": [
        "app/views/*"
      ],
      "@components/*": [
        "app/components/*"
      ],
      "@services/*": [
        "app/services/*"
      ],
      "@directives/*": [
        "app/directives/*"
      ],
      "@modules/*": [
        "app/modules/*"
      ],
      "@environments/*": [
        "environments/*"
      ],
      "@app/*": [
        "app/*"
      ],
    }
  }
}